doctype html
html
    head
        meta(charset='UTF-8')
        meta(name="viewport" content="width=device-width, initial-scale=1")
        title Compiler command generator
        link(rel='icon' href='assets/favicon.ico')
        link(rel='stylesheet' href='css/common.css')
        link(rel='stylesheet' href='css/index.css')
    body
        main.boilerplate-generators-list

        template#boilerplate-generator
            div.boilerplate-generator
                h3.boilerplate-generator-title

                div.boilerplate-generator-output-block
                    p.boilerplate-generator-output
                    ul.boilerplate-generator-error-list
                    button.boilerplate-generator-output-copy-button

                hr

                ul.boilerplate-generator-presets

                hr

                form.boilerplate-generator-form

        template#boilerplate-generator-preset-button
            button.boilerplate-generator-preset-button

        template#boilerplate-generator-form-input
            div.boilerplate-generator-form-input
                input(type='checkbox')
                label
                div.boilerplate-generator-dependent-inputs

        script(src='js/utility.js')
        script(src='js/boilerplate_generators.js')
        script(src='js/index.js')
